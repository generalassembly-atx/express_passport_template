<% include partials/head %>
  <% include partials/navbar %>
  <body>
  <div class="profile">
    <div class="left-profile">
      <h1> <%= user.firstname %> <%= user.lastname %> </h1>
      <img src="<%= user.image_url %>" style="max-height: 100px; max-width: 100px;" alt="<%= user.firstname %>">
      <h2 class="location"><%= user.location %></h2>
      <h2 class="age"><%= user.age %></h2>
      <form action="/<%= user._id %>/edit" method="get" >
        <input type="submit" class="btn btn-primary" value="Edit">
      </form>
      <form method="post" action="/frequest/<%= user._id%>">
        <input id="everyoneBut"type="submit" class="btn btn-primary" value="+Match"/>
      </form>

      </div>
    </div>

    <%if (friends) { %>
      <% friends.forEach(function(user) { %>
      <div class="user">
        <a href="/profile/<%= user._id%>"> <%= user.firstname %> <%= user.lastname %> </a>
        <img src="<%= user.image_url %>" style="max-height: 100px; max-width: 100px;"/>
      </div>
      <% }); %>
    <% } %>


    <p class="aboutme"><%= user.aboutme %></p>
  </div>
</body>
</html>
